<Window x:Class="Sprocket.WriteMiniQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WriteMiniQueryWindow" 
        MinHeight="250" MinWidth="410"
        Height="250" Width="550"
        Loaded="Window_Loaded"
        >
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal" HorizontalAlignment="Right" 
                    Height="40"
                    >
            <TextBlock TextWrapping="Wrap" TextAlignment="Left" Margin="0,0,20,0" 
                       Name="whichParam"
                       ></TextBlock>
            <Button Click="cancelEdit">Cancel</Button>
            <Button Click="saveQuery">Save</Button>
        </StackPanel>

        <TextBox 
            AcceptsTab="True" AcceptsReturn="True" TextWrapping="NoWrap"
            Name="query"
            ></TextBox>
    </DockPanel>
</Window>
